{
  "rules": {
    "preset-ja-technical-writing": {
      "max-kanji-continuous-len": 10,
      "no-exclamation-question-mark": true,
      "sentence-length": {
        "max": 100
      }
    },
    "no-todo": true,
    "max-ten": {
      "max": 3
    },
    "spellcheck-tech-word": true,
    "prh": {
      "rulePaths": ["./prh-rules/media-technology.yml"]
    }
  }
}
